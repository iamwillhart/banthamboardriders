{
  "id": "blog_post",
  "label": "Blog Post",
  "format": "custom",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "URL Slug",
          "placeholder": "post-title"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Post Title",
          "placeholder": "Blog post title"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {},
          "thumbnails": [
            {
              "name": "card",
              "width": 800,
              "height": 600
            }
          ]
        }
      },
      "excerpt": {
        "type": "Text",
        "config": {
          "label": "Excerpt",
          "placeholder": "Brief description for blog listings"
        }
      },
      "publish_date": {
        "type": "Date",
        "config": {
          "label": "Publish Date"
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "Author",
          "placeholder": "Author name"
        }
      },
      "body": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "rich_text": { "type": "SharedSlice" },
            "two_column": { "type": "SharedSlice" },
            "quote": { "type": "SharedSlice" },
            "image_gallery": { "type": "SharedSlice" },
            "video_embed": { "type": "SharedSlice" },
            "spacer": { "type": "SharedSlice" },
            "divider": { "type": "SharedSlice" },
            "cta": { "type": "SharedSlice" }
          }
        }
      }
    },
    "SEO": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "SEO title (defaults to Post Title if empty)"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "Page description for SEO"
        }
      }
    }
  }
}
