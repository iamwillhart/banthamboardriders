---
/**
 * TextStatement
 *
 * KB RATING: A* (0KB JS â€” pure CSS)
 * CARBON TIER: A* (text only)
 *
 * Bold intro text for manifestos, opening statements, and impactful
 * short-form copy. Larger typography with more presence than prose.
 *
 * ============================================================
 * ðŸš€ NEW CLIENT SETUP â€” follow these steps:
 * ============================================================
 *
 * STEP 1: Set max-width (line ~83)
 *   Adjust the character width for your design.
 *   Recommendation: 45châ€“60ch for statement text.
 *
 * STEP 2: Set positioning (line ~84)
 *   - margin-inline: auto           â†’ Centered (default)
 *   - margin-inline: 0 auto         â†’ Left-biased
 *   - margin-inline: auto 0         â†’ Right-biased
 *   - margin-inline: 0              â†’ Flush left
 *
 * STEP 3: Adjust typography (lines ~98-102)
 *   Paragraphs are styled large (h2-sized) for impact.
 *   Font size, weight, and line-height for the statement feel.
 *
 * ============================================================
 * ðŸ“ PRISMIC FIELDS (client controls in CMS)
 * ============================================================
 *   - content (Rich Text) â€” the statement text
 *   - button_label (Key Text) â€” optional button text
 *   - button_link (Link) â€” optional button destination
 *   - background_colour (Select):
 *       â€¢ "Main colour" (value: main) â€” uses --color-bg
 *       â€¢ "Secondary colour" (value: secondary) â€” uses --color-bg-alt
 *       â€¢ "Accent colour" (value: accent) â€” uses --color-accent
 *
 * ============================================================
 */
import Section from "../Section.astro";
import Button from "../Button.astro";
import * as prismic from "@prismicio/client";
import { linkResolver } from "../../lib/prismic";

interface Props {
  content?: any;
  button_label?: string;
  button_link?: { url?: string } | string;
  background_colour?: "main" | "secondary" | "accent";
  spacing?: "default" | "compact" | "hero";
}

const {
  content,
  button_label,
  button_link,
  background_colour = "main",
} = Astro.props;

// Helper to extract URL from Prismic link field
// Uses prismic.asLink to handle all link types: Web, Document, Media
const getUrl = (link: any): string | null => {
  if (!link) return null;
  if (typeof link === "string") return link || null;
  return prismic.asLink(link, { linkResolver }) || null;
};

// Map client-friendly names to Section's background prop
// Handle both lowercase and capitalized values from Prismic
const bgValue = String(background_colour || "main").toLowerCase();
const background =
  bgValue === "secondary" ? "alt" : bgValue === "accent" ? "accent" : "default";

// Use Prismic's built-in HTML renderer for proper rich text handling
// Handles bold, italic, links, lists, etc. automatically
const htmlContent = content ? prismic.asHTML(content, { linkResolver }) : "";

// Resolve button link URL
const buttonUrl = getUrl(button_link);

// Choose button variant based on background
// global.css already handles .section--bg-accent .btn--primary color inversion
const buttonVariant = background === "accent" ? "secondary" : "primary";
---

<Section spacing="compact" background={background} container="default">
  <div class="text-statement">
    {
      htmlContent ? (
        <div class="text-statement__content" set:html={htmlContent} />
      ) : (
        <div class="text-statement__content">
          <slot />
        </div>
      )
    }
    {
      button_label && buttonUrl && (
        <div class="text-statement__action">
          <Button href={buttonUrl} variant={buttonVariant}>
            {button_label}
          </Button>
        </div>
      )
    }
  </div>
</Section>

<style>
  /* ============================================================
     LAYOUT SETTINGS â€” adjust per project (Steps 1-2)
     ============================================================ */
  .text-statement__content,
  .text-statement__action {
    max-width: 80ch;
    margin-inline: 0;
  }

  /* ============================================================
     TYPOGRAPHY â€” adjust per project (Step 3)
     ============================================================ */
  .text-statement__content :global(p) {
    font-size: clamp(var(--text-xl), 3vw, var(--text-2xl));
    line-height: var(--leading-snug);
  }

  .text-statement__content :global(p + p) {
    margin-top: var(--space-6);
  }

  /* Headings â€” bold & uppercase already from global reset,
     just need sizes and spacing */
  .text-statement__content :global(h2) {
    font-size: clamp(var(--text-3xl), 4vw, var(--text-4xl));
    margin-top: var(--space-12);
    margin-bottom: var(--space-4);
  }

  .text-statement__content :global(h3) {
    font-size: clamp(var(--text-2xl), 3vw, var(--text-3xl));
    margin-top: var(--space-10);
    margin-bottom: var(--space-4);
  }

  .text-statement__content :global(h4) {
    font-size: clamp(var(--text-xl), 3vw, var(--text-2xl));
    margin-top: var(--space-8);
    margin-bottom: var(--space-3);
  }

  .text-statement__content :global(h5) {
    font-size: var(--text-xl);
    margin-top: var(--space-8);
    margin-bottom: var(--space-3);
  }

  .text-statement__content :global(h6) {
    font-size: var(--text-lg);
    margin-top: var(--space-6);
    margin-bottom: var(--space-3);
  }

  /* Remove top margin from first child */
  .text-statement__content :global(> :first-child) {
    margin-top: 0;
  }

  /* Lists â€” global reset strips list-style, restore it here */
  .text-statement__content :global(ul) {
    list-style: disc;
    padding-left: var(--space-6);
  }

  .text-statement__content :global(ol) {
    list-style: decimal;
    padding-left: var(--space-6);
  }

  .text-statement__content :global(li) {
    margin-top: var(--space-2);
    font-size: clamp(var(--text-lg), 3vw, var(--text-xl));
  }

  /* Links */
  .text-statement__content :global(a) {
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: opacity var(--transition-fast);
  }

  .text-statement__content :global(a:hover) {
    opacity: 0.7;
  }

  /* ============================================================
     BUTTON â€” appears below the statement text
     ============================================================ */
  .text-statement__action {
    margin-top: var(--space-8);
    display: flex;
    justify-content: flex-end;
    width: 100%;
  }
</style>
