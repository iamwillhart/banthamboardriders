---
/**
 * TextProse
 *
 * KB RATING: A* (0KB JS â€” pure CSS)
 * CARBON TIER: A* (text only)
 *
 * Long-form body copy for case studies, articles, and detailed content.
 * Optimized for comfortable reading with proper prose typography.
 *
 * ============================================================
 * ðŸš€ NEW CLIENT SETUP â€” follow these steps:
 * ============================================================
 *
 * STEP 1: Set max-width (line 77)
 *   Optimal reading: 55châ€“65ch (characters per line).
 *   Default: 65ch
 *
 * STEP 2: Set positioning (line 78)
 *   - margin-inline: auto           â†’ Centered (default)
 *   - margin-inline: 0 auto         â†’ Left-biased
 *   - margin-inline: auto 0         â†’ Right-biased
 *
 * STEP 3: Set text alignment (line 79)
 *   - text-align: left           â†’ Left-biased (default)
 *   - text-align: center         â†’ Centered
 *
 * ============================================================
 * ðŸ“ PRISMIC FIELDS (client controls in CMS)
 * ============================================================
 *   - content (Rich Text) â€” the prose content
 *   - background_colour (Select):
 *       â€¢ "Main colour" (value: main) â€” uses --color-bg
 *       â€¢ "Secondary colour" (value: secondary) â€” uses --color-bg-alt
 *
 * ============================================================
 */
import Section from "../Section.astro";
import * as prismic from "@prismicio/client";
import { linkResolver } from "../../lib/prismic";

interface Props {
  content?: any;
  background_colour?: "main" | "secondary";
  spacing?: "default" | "compact" | "hero";
}

const {
  content,
  background_colour = "main",
  spacing = "default",
} = Astro.props;

// Map client-friendly names to Section's background prop
// Handle both lowercase and capitalized values from Prismic
const bgValue = String(background_colour || "main").toLowerCase();
const background = bgValue === "secondary" ? "alt" : "default";

// Custom HTML serializer to ensure images always have alt attributes
// Prevents accessibility audit failures when editors forget to add alt text
const htmlSerializer: prismic.HTMLMapSerializer = {
  image: ({ node }) => {
    const alt = node.alt || "";
    const src = node.url || "";
    const optimizedSrc = src ? `${src.split("?")[0]}?auto=format&q=80` : "";
    let imageTag = `<img src="${optimizedSrc}" alt="${alt}" loading="lazy" decoding="async" />`;

    // Wrap in <a> if the image has a link (handles Web, Document, and Media links)
    if (node.linkTo) {
      const href = prismic.asLink(node.linkTo, { linkResolver });
      if (href) {
        imageTag = `<a href="${href}">${imageTag}</a>`;
      }
    }

    return `<p class="block-img">${imageTag}</p>`;
  },
};

// Use Prismic's built-in HTML renderer with custom serializer
// Handles bold, italic, links, lists, etc. automatically
const htmlContent = content
  ? prismic.asHTML(content, { linkResolver, serializer: htmlSerializer })
  : "";
---

<Section spacing="compact" background={background} container="default">
  <div class="text-prose">
    {
      htmlContent ? (
        <div class="text-prose__content" set:html={htmlContent} />
      ) : (
        <div class="text-prose__content">
          <slot />
        </div>
      )
    }
  </div>
</Section>

<style>
  /* ============================================================
     LAYOUT SETTINGS â€” adjust per project (Steps 1-2)
     ============================================================ */
  .text-prose__content {
    max-width: 65ch; /* Step 1: Optimal reading width */
    margin-inline: auto; /* Step 2: Positioning: 0 auto - left-biased, auto 0 - right-biased, auto - centered */
    text-align: left; /* Step 3 */
  }

  /* ============================================================
     PROSE TYPOGRAPHY
     ============================================================ */
  .text-prose__content :global(p) {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
  }

  .text-prose__content :global(> * + *) {
    margin-top: var(--space-6);
  }

  /* Headings */
  .text-prose__content :global(h2) {
    font-family: var(--font-serif);
    font-size: var(--text-4xl);
    font-weight: var(--font-regular);
    margin-top: var(--space-12);
  }

  .text-prose__content :global(h3) {
    font-family: var(--font-serif);
    font-size: var(--text-3xl);
    font-weight: var(--font-medium);
    margin-top: var(--space-8);
  }

  .text-prose__content :global(h4) {
    font-size: var(--text-2xl);
    font-weight: var(--font-medium);
    margin-top: var(--space-6);
  }

  /* Remove top margin from first child (prevents double-padding at section start) */
  .text-prose__content :global(> :first-child) {
    margin-top: 0;
  }

  /* Links */
  .text-prose__content :global(a) {
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: opacity var(--transition-fast);
  }

  .text-prose__content :global(a:hover) {
    opacity: 0.7;
  }

  /* Lists */
  .text-prose__content :global(ul),
  .text-prose__content :global(ol) {
    padding-left: var(--space-6);
  }

  .text-prose__content :global(ul) {
    list-style: disc;
  }

  .text-prose__content :global(ol) {
    list-style: decimal;
  }

  .text-prose__content :global(li + li) {
    margin-top: var(--space-2);
  }

  /* Inline styles */
  .text-prose__content :global(strong) {
    font-weight: var(--font-bold);
  }

  .text-prose__content :global(em) {
    font-style: italic;
  }

  /* Blockquotes */
  .text-prose__content :global(blockquote) {
    padding-left: var(--space-6);
    border-left: 2px solid var(--color-text-subtle);
    font-style: italic;
  }
</style>
